        q.media = { type: 'text', text: msg.text };
        await bot.sendMessage(ADMIN_ID, `QR text saved for ${q.code}`);
      } else if (msg.document) {
        q.media = { type: 'document', file_id: msg.document.file_id, name: msg.document.file_name };
